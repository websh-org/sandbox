{
  "$id": "https://websh.org/manifest.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "App Manifest",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the app."
    },
    "icon": {
      "type": "string",
      "format": "uri-reference",
      "description": "The URL of the app's icon."
    },
    "description": {
      "type": "string",
      "description": "Description of the app."
    },
    "version": {
      "type": "string",
      "description": "Version of the app."
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "The URL of the app's homepage."
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "The URL of the app's source code homepage."
    },
    "license": {
      "type": "string",
      "description": "The SPDX-compliante license ID for the app."
    }
  },
  "required": ["name","icon","description"]
}